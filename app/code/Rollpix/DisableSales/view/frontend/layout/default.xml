<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <block class="Magento\Framework\View\Element\Template"
                   name="rollpix.disablesales.banner"
                   template="Rollpix_DisableSales::banner.phtml"
                   before="-">
                <arguments>
                    <argument name="sales_status" xsi:type="object">Rollpix\DisableSales\ViewModel\SalesStatus</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="before.body.end">
            <block class="Magento\Framework\View\Element\Template"
                   name="rollpix.disablesales.modal"
                   template="Rollpix_DisableSales::modal.phtml">
                <arguments>
                    <argument name="sales_status" xsi:type="object">Rollpix\DisableSales\ViewModel\SalesStatus</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
