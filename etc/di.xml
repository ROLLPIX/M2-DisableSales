<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Block add-to-cart via REST API / GraphQL -->
    <type name="Magento\Quote\Api\CartItemRepositoryInterface">
        <plugin name="rollpix_disablesales_cart_item_repository"
                type="Rollpix\DisableSales\Plugin\Api\CartItemRepositoryPlugin"
                sortOrder="10"/>
    </type>

    <!-- Second layer: block at quote model level (covers all entry points) -->
    <type name="Magento\Quote\Model\Quote">
        <plugin name="rollpix_disablesales_quote_add_product"
                type="Rollpix\DisableSales\Plugin\Quote\AddProductPlugin"
                sortOrder="10"/>
    </type>
</config>
